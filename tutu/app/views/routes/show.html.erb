<p id="notice"><%= notice %></p>

<p>
  <strong>Название:</strong>
  <%= @route.name %>
</p>

<p>
  <strong>Поезда на маршруте:</strong>
  <% if @route.trains.present? %>
    <% @route.trains.each do |train| %>
      <%= train.number_train %>
    <% end %>
  <% else %>
  Не указано
  <% end %>
</p>

<p><strong>Станции в маршруте:</strong></p>
<p><% if @route.railway_stations.empty? %>
    Список пуст
  <% else %>
  <ul>
    <% @route.railway_stations.each do |station| %>
     <li><%= station.title %></li>
    <% end %>
  </ul>
  <% end %>
</p>

<%= link_to 'Редактировать', edit_route_path(@route) %> |
<%= link_to 'Назад', routes_path %>
