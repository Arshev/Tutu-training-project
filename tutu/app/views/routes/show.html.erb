<p id="notice"><%= notice %></p>

<p>
  <strong>Название:</strong>
  <%= @route.name %>
</p>

<p>
  <strong>Поезда на маршруте:</strong>
  <% if @route.trains.present? %>
    <% @route.trains.each do |train| %>
      <%= train.number_train %>
    <% end %>
  <% else %>
  Не указано
  <% end %>
</p>

<p><strong>Станции в маршруте:</strong></p>
<p><% if @route.railway_stations.empty? %>
    Список пуст
  <% else %>
  <table>
    <thead>
      <tr>
        <td width="100px">Название</td>
        <td>Позиция</td>
        <td>Время прибытия</td>
        <td>Время отправления</td>
      </tr>
    </thead>
    <tbody>
      <% @route.railway_stations.ordered.each do |station| %>
      <tr>
        <td><%= station.title %></td>
        <td><%= form_tag update_position_railway_station_path(station), method: :patch do %>
          <%= number_field_tag(:position, station.position_in(@route)) %>
          <%= hidden_field_tag(:route_id, @route.id) %>
          <%= submit_tag "Изменить" %>
          <% end %>
        </td>
        <td><%= form_tag update_time_arrival_railway_station_path(station), method: :patch do %>
          <%= text_field_tag(:arrival, station.arrival(@route)) %>
          <%= hidden_field_tag(:route_id, @route.id) %>
          <%= submit_tag "Изменить" %>
          <% end %>
        </td>
        <td><%= form_tag update_time_departure_railway_station_path(station), method: :patch do %>
          <%= text_field_tag(:departure, station.departure(@route)) %>
          <%= hidden_field_tag(:route_id, @route.id) %>
          <%= submit_tag "Изменить" %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
</p>

<%= link_to 'Редактировать', edit_route_path(@route) %> |
<%= link_to 'Назад', routes_path %>
