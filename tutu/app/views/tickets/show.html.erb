<h1>Ваш билет</h1>

<table>
  <tbody>
  <tr>
    <th>Серийный номер билета:</th>
    <td><%= @ticket.serial_number %></td>
  </tr>
  <tr>
    <th>Пассажир:</th>
    <td><%= @ticket.user_name %></td>
  </tr>
  <tr>
    <th>Номер поезда: </th>
    <td><%= @ticket.train.number_train %></td>
  </tr>
  <tr>
    <th>Станция отправления: </th>
    <td><%= @ticket.start_station.title %></td>
  </tr>
  <tr>
    <th>Станция прибытия: </th>
    <td><%= @ticket.end_station.title %></td>
  </tr>
  </tbody>
</table>

<%= link_to t('common.back'), tickets_path %>