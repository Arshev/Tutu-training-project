<%= form_for(train) do |f| %>
    <%= render 'common/errors', resource: @train %>
  <div class="field">
    <%= f.label :number_train %>
    <%= f.text_field :number_train %>
  </div>

  <div class="field">
  <%= f.label :route, "Текущая станция" %>
  <%= f.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="field">
  <%= f.label :route, "Текущий маршрут" %>
  <%= f.collection_select :route_id, Route.all, :id, :name %>
  </div>

  <div class="field">
  <p>Сортировка вагонов: </p>
   <p>С хвоста<%= radio_button_tag(:sort_wagons, true) %></p>
   <p>С головы <%= radio_button_tag(:sort_wagons, false) %></p>
   </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
