<h1>Станции</h1>

<table class="table">
  <thead>
    <tr>
      <th> Название</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @railway_stations.each do |railway_station| %>
      <tr>
        <td>
          <div id="railway_station_title_<%= railway_station.id %>">
            <%= railway_station.title %>
          </div>
          <%= render 'form', station: railway_station, hidden: true %>
        </td>
        <td><%= link_to 'Показать', [:admin, railway_station] %></td>
        <td><%= link_to 'Редактировать', '', class: 'edit_station', data: { station_id: railway_station.id } %></td>
        <td><%= link_to 'Удалить', [:admin, railway_station], method: :delete, data: { confirm: 'Уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Создать станцию', new_admin_railway_station_path %>
<%= link_to t('common.back'), admin_railway_stations_path %>
